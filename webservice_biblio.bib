journal = {Remote Sensing},
keywords = {Bleaching,Bleaching alert area,Climatology,Degree heating week,Hotspots,Monitoring,Remote sensing,Satellite,Sea surface temperature (SST),Thermal stress},
title = {{Reef-scale thermal stress monitoring of coral ecosystems: New 5-km global products from NOAA coral reef watch}},
year = {2014}
