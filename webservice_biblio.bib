journal = {Deep-Sea Research Part II: Topical Studies in Oceanography},
keywords = {Alaska Bering Sea,Bioenergetics,Biological reference points,Fisheries,Groundfish,Multi-species model,Predator prey,Stock assessment,USA},
number = {September 2016},
pages = {360--378},
publisher = {Elsevier},
title = {{A comparison of fisheries biological reference points estimated from temperature-specific multi-species and single-species climate-enhanced stock assessment models}},
