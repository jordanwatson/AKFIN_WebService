file = {:C$\backslash$:/Users/jordan.watson/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Hazen et al. - 2018 - A dynamic ocean management tool to reduce bycatch and support sustainable fisheries.pdf:pdf},
issn = {2375-2548},
journal = {Science Advances},
number = {5},
pages = {eaar3001},
title = {{A dynamic ocean management tool to reduce bycatch and support sustainable fisheries}},
url = {http://advances.sciencemag.org/lookup/doi/10.1126/sciadv.aar3001},
volume = {4},
year = {2018}
}
@article{Kotwicki2013,
